# Using Ubuntu 20.04 for compatibility with older mruby Rake builds
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + mruby Specific Dependencies
# mruby requires: ruby, rake, bison, gcc, and standard build tools
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    ruby rake \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download mruby Repo
RUN git clone https://github.com/mruby/mruby.git /app/inputs/mruby

COPY mruby_pipeline.py /app/

CMD ["python3", "mruby_pipeline.py"]