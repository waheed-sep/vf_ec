# Using Ubuntu 20.04 for maximum compatibility with older Autotools commits
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + w3m Specific Dependencies
# w3m requires: autoconf, libtool, libgc (Boehm GC), ncurses (Terminal UI), openssl, zlib
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    autoconf automake libtool gettext \
    libgc-dev libncurses5-dev libssl-dev zlib1g-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download w3m Repo
RUN git clone https://github.com/tats/w3m.git /app/inputs/w3m

COPY w3m_pipeline.py /app/

CMD ["python3", "w3m_pipeline.py"]