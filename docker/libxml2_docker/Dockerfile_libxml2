# Using Ubuntu 20.04 for maximum compatibility with historical Autotools scripts
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + libxml2 Specific Dependencies
# libxml2 requires: autoconf, automake, libtool, zlib, liblzma (xz), libicu
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    autoconf automake libtool \
    zlib1g-dev liblzma-dev libicu-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download libxml2 Repo
RUN git clone https://github.com/GNOME/libxml2.git /app/inputs/libxml2

COPY libxml2_pipeline.py /app/

CMD ["python3", "libxml2_pipeline.py"]