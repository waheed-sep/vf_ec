# Using Ubuntu 20.04 for compatibility with older GhostPDL Autotools commits
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + GhostPDL Specific Dependencies
# GhostPDL requires: autoconf, libtool, fontconfig, freetype, jpeg, png, tiff, lcms2, openjpeg, cups, X11
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    autoconf automake libtool \
    libjpeg-dev libpng-dev libtiff-dev zlib1g-dev \
    libfontconfig1-dev libfreetype6-dev libcups2-dev \
    liblcms2-dev libopenjp2-7-dev libxt-dev libxext-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download GhostPDL Repo
RUN git clone https://github.com/ArtifexSoftware/ghostpdl.git /app/inputs/ghostpdl

COPY ghostpdl_pipeline.py /app/

CMD ["python3", "ghostpdl_pipeline.py"]