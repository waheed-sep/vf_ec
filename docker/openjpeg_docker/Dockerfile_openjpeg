# Using Ubuntu 20.04 for compatibility with older OpenJPEG CMake commits
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + OpenJPEG Specific Dependencies
# OpenJPEG requires: cmake, zlib, libpng, libtiff, liblcms2 (color management)
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    cmake \
    zlib1g-dev libpng-dev libtiff-dev liblcms2-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download OpenJPEG Repo
RUN git clone https://github.com/uclouvain/openjpeg.git /app/inputs/openjpeg

COPY openjpeg_pipeline.py /app/

CMD ["python3", "openjpeg_pipeline.py"]