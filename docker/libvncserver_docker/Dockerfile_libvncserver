# Using Ubuntu 20.04 for compatibility with both legacy Autotools and newer CMake commits
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + LibVNCServer Specific Dependencies
# LibVNCServer requires: compression (lzo, jpeg, png, zlib) and crypto (gnutls, gcrypt, ssl)
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    cmake autoconf automake libtool \
    liblzo2-dev libjpeg-dev libpng-dev zlib1g-dev \
    libgcrypt20-dev libgnutls28-dev libssl-dev libsdl2-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download LibVNCServer Repo
RUN git clone https://github.com/LibVNC/libvncserver.git /app/inputs/libvncserver

COPY libvncserver_pipeline.py /app/

CMD ["python3", "libvncserver_pipeline.py"]