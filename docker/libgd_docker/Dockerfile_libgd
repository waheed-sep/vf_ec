# Using Ubuntu 20.04 for compatibility with older Libgd Autotools commits
FROM ubuntu:20.04

ENV DEBIAN_FRONTEND=noninteractive

# Install VFEC Core + Libgd Specific Dependencies
# Libgd requires: autoconf, automake, libtool, gettext, and headers for PNG/JPEG/WEBP/TIFF/FREETYPE
RUN apt-get update && apt-get install -y \
    build-essential rsync wget curl \
    python3 python3-dev libdw-dev libunwind-dev \
    flex bison git pkg-config libelf-dev python3-pip \
    autoconf automake libtool gettext autopoint \
    zlib1g-dev libpng-dev libfreetype6-dev libfontconfig1-dev \
    libjpeg-dev libwebp-dev libtiff5-dev libxpm-dev \
    && rm -rf /var/lib/apt/lists/* \
    && git clone --depth 1 https://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux.git \
    && cd linux/tools/perf \
    && NO_JEVENTS=1 NO_LIBTRACEEVENT=1 make \
    && cp perf /usr/bin \
    && cd / && rm -rf linux

COPY requirements.txt /app/
RUN pip3 install --no-cache-dir -r /app/requirements.txt

WORKDIR /app

# Download Libgd Repo
RUN git clone https://github.com/libgd/libgd.git /app/inputs/libgd

COPY libgd_pipeline.py /app/

CMD ["python3", "libgd_pipeline.py"]